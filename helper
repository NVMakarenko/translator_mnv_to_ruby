def lexan()
	state, numLine, char, lexem, numChar, FSuccess, helper
begin
	for numChar:=0 to lengthCode do
		char := nextChar() #прочитати символ
  		classChar := classOfChar(char) # визначити клас символу
state=nextState(state,classCh) # визначити стан
if is_final(state) goto (9)#якщо стан заключний, то
if state==initState goto (12) #якщо стан НЕ заключний, а ін.,
procedureList() #виконуємо інструкції #M9
helper :=1 #присвоюємо значення
if helper ==1 goto (15) # переходимо на рядок 15
lexem = '' #збираємо нову лексему #M12
helper :=1
if helper ==1 goto (15)
	lexem = lexem+char #додати символ до лексеми #M15
	write : lexan finished successfully;
	if ~helper goto (19)
		write: error;
end # рядок М19
end
end
def nextChar()
	numChar := numChar+1
	sourceCode :=[numChar]
end

def putCharBack(numChar)
  numChar = numChar-1
end
