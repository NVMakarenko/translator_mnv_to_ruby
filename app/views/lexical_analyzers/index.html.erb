<%lexan=get_lexan(@worddiv)%>
<div class="container">
  <div class="row">
    <div class="col">
      <h1><%= t('form.todo') %></h1>
        <%= render "form", lexical_analyzer: @lexical_analyzer%>
      <div>
        <h1><%= t('form.parser') %></h1>
        <div>
          <%= syntan=parser(lexan)%><br>
        </div>
        <h1><%= t('form.identificator')%></h1>
        <% if syntan=="Syntax analyze is finished. Program is on proccess..."%>
          <% parse_statement(lexan).each do |identificator| %>
            <%= identificator[:lexema]%> = <%=identificator[:assign_value]%><br>
          <%end%>
        <%end%>
      </div>
    </div>

    <div class="col">
      <h1><%= t('form.lexan') %></h1>
      <p><%= @lexical_analyzer.progtext %></p>

      <table>
        <tr>
         <th>N</th>
         <th>Program line</th>
         <th>lexem type</th>
         <th>lexema</th>
       </tr>
        <% lexan.each do |item| %>
       <tr>
            <td><span class="mycount"></span></td>
            <td><%=item[:num_line]%></td>
            <td><%=item[:lexem_type]%></td>
            <td><%=item[:lexema]%></td>
      </tr>
      <%end %>
      </table>
    </div>
  </div>
</div>
