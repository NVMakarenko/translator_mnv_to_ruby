<%lexan=get_lexan(@worddiv)%>
<div class="container">
  <div class="row">
    <div class="col">
      <h1><%= t('form.todo') %></h1>
    </div>
    <div class="col">
      <h1><%= t('form.rpn') %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= render "form", lexical_analyzer: @lexical_analyzer%>
    </div>
    <div class="col">
      <%string=lexan.select {|v| v[:num_line]==1}%>
      <%= poliz(string.drop(2))%><br>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <h1><%= t('form.lexan') %></h1>
      <p><%= @lexical_analyzer.progtext %></p>

      <table>
        <tr>
         <th>N</th>
         <th>Program line</th>
         <th>lexem type</th>
         <th>lexema</th>
         <th>index in proper table</th>
       </tr>
        <% lexan.each do |item| %>
       <tr>
            <td><span class="mycount"></span></td>
            <td><%=item[:num_line]%></td>
            <td><%=item[:lexem_type]%></td>
            <td><%=item[:lexema]%></td>
            <td><%=item[:idx]%></td>
      </tr>
      <%end %>
      </table>
    </div>
  </div>
  <div class="row">
    <h1><%= t('form.parser') %></h1>
    <div class="col">
      <%= parse_statement_list(lexan)%><br>
    </div>
  </div>
</div>
