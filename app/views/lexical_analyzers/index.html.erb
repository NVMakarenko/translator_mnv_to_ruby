<div class="container">
  <div class="row">
    <div class="col">
      <h1><%= t('form.todo') %></h1>
    </div>
    <div class="col">
      <h1><%= t('form.lexan') %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= render "form", lexical_analyzer: @lexical_analyzer%>
    </div>
    <div class="col">
      <p><%= @lexical_analyzer.progtext %></p>
      <%result=get_lexan(@worddiv)%>
      <table>
        <tr>
         <th>N</th>
         <th>Program line</th>
         <th>lexem type</th>
         <th>lexema</th>
         <th>index in proper table</th>
       </tr>
        <% result.each do |item| %>
       <tr>
            <td><span class="mycount"></span></td>
            <td><%=item[:num_line]%></td>
            <td><%=item[:lexem_type]%></td>
            <td><%=item[:lexema]%></td>
            <td><%=item[:idx]%></td>
      </tr>
      <%end %>
      </table>
    </div>
  </div>
</div>
