<div class="container">
  <div class="row">
    <div class="col">
      <h1><%= t('form.todo') %></h1>
    </div>
    <div class="col">
      <h1><%= t('form.lexan') %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= render "form", lexical_analyzer: @lexical_analyzer%>
    </div>
    <div class="col">
      <p><%= @lexical_analyzer.progtext %></p>

      <table>
        <tr>
         <th>N</th>
         <th>Program line</th>
         <th>lexem type</th>
         <th>lexema</th>
         <th>index in proper table</th>
       </tr>
        <% @worddiv.each do |item| %>
       <tr>
            <td><span class="mycount"></span></td>
            <td><%=get_n_line(item)%></td>
            <td><%=get_id(item)%></td>
            <td><%=item%></td>
            <td><%=get_idx_id(item)%>
            <%=get_idx_math(item)%></td>
      </tr>
      <%end %>
      </table>
    </div>
  </div>
</div>
